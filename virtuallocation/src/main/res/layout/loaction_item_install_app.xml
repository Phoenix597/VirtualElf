<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_default_gap"
    android:layout_marginRight="@dimen/dp_default_gap"
    android:layout_marginTop="@dimen/dp_default_gap"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="3dp"
    app:cardElevation="8dp">


    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_default_gap"
         >

        <sang.com.minitools.widget.CircularImageView
            android:id="@+id/img_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@color/color_of_default_title_low"
            android:transitionName="@string/location_share_img_name"
            app:radius="45dp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_default_gap"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_of_default_title_high"
            android:textSize="15sp"
            android:transitionName="@string/location_share_bt_name" />

    </LinearLayout>

</android.support.v7.widget.CardView>



